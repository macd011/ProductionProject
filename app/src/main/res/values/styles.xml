<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom text appearance for CalendarView day and week day views -->
    <style name="CalendarDayViewTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
    </style>

    <style name="CalendarWeekDayViewTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_black</item>
    </style>

    <!-- Calendar widget style -->
    <style name="CalendarWidgetStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayViewTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDayViewTextAppearance</item>
    </style>
</resources>
