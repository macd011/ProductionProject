<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slate_grey"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHeaderStrength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STRENGTH PLANNER"
            android:textSize="42sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/proxima_nova_black"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etTrainingDayName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tvHeaderStrength"
            android:hint="Enter Training Day"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnAddDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTrainingDayName"
            android:text="Add Day"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingDays"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/btnAddDay"
            android:minHeight="48dp"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerTrainingDays"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/layoutAddWorkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/etWorkoutName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="3"
                    android:hint="Workout"
                    android:minHeight="48dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/etReps"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:hint="Reps"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/etSets"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:hint="Sets"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/etRPE"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:hint="RPE"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnAddWorkout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@string/add_workout"
                    android:src="@android:drawable/ic_input_add" />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWorkouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalScrollView"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:itemIconTint="@color/nav_item_color_state"
            app:itemTextColor="@color/nav_item_color_state"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />
    </RelativeLayout>
</ScrollView>
